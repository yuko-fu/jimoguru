    <div id="container"></div>
    <script>
    var dataFromDatabase = gon.votes;
    // しきい値
    var threshold = 100;
    // データベースから取得したデータをループ処理
    dataFromDatabase.forEach(variable => {
      
      // しきい値からパーセンテージを計算
      variable.percentage = Math.round(variable.count / threshold * 100);
      
      // containerに追加
      document.querySelector('#container').insertAdjacentHTML('beforeend', `<div class="graf">
        <div><span class="data-name">${variable.name}</span></div>
        <div class="graf-bar-bg">
        <div class="graf-bar" id="${variable.name}"><span>${variable.count}</span></div>
        </div></div>`);
    
      // widthを指定
      document.querySelector('#' + variable.name).style.width = variable.percentage + '%';
    });
    </script>
    

