<h1>ユーザー詳細画面</h1>
<p></p>
<h1>投票一覧</h1>
<table>
  <head>
    <tr>  
      <th>投稿日</th>
      <th>店名</th>
      <th>メニュー名</th>
      <th>投稿写真</th>
      <th>コメント</th>
      <th colspan="完了"></th>
    </tr>
  </head>
  <body>
    <% @votes.each do |vote| %>
      <tr>
      <div>
          <td><%= vote.created_at.to_s(:datetime_jp) %></td>
          <td ><%= link_to vote.shop.name, shop_path(vote.shop)%></td>
          <td><%= vote.menu.name %></td>
          <td><% if vote.image.attached? %>
            <%= image_tag vote.image.variant(resize: "200") %>
          <% else %>
            画像がありません<br>
          <% end %></td>
          <td><%= vote.content %></td>
          <td><%= link_to "削除", vote_path(vote.id), method: :delete, data: { confirm: "本当に削除しますか？" } %></td>
        </tr>
    <% end %>
  </body>
</table>

<%= link_to 'お店検索', shops_path, data: {"turbolinks" => false} %>
<%= link_to 'プロフィール編集', edit_user_registration_path(current_user) %>
<% if  current_user.admin? %>
  <%= link_to '管理者画面', '/admin', data: {"turbolinks" => false}  %>
  <% end %>